#!/usr/bin/env bash

# This is based on the logic inside the default xinitrc on arch at
# /etc/X11/xinit/xinitrc and seems pretty important
# See also: https://wiki.archlinux.org/index.php/Xinit

userresources=$HOME/.Xresources
usermodmap=$HOME/.Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

if [ -f $sysresources ]; then
  xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
  xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
  xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
  xmodmap "$usermodmap"
fi

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
  for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
    if [ -x "$f" ]; then
      # shellcheck source=/dev/null
      . "$f"
    fi
  done
  unset f
fi

# Apparently all the cool kids also source these files
# See: https://wiki.archlinux.org/index.php/Xprofile
for f in /etc/xprofile ~/.xprofile; do
  if [ -f "$f" ]; then
    # shellcheck source=/dev/null
    . "$f"
  fi
done

# Dump the env
env
